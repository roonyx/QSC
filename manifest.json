{
  "manifest_version": 2,

  "name": "QSC",
  "description": "Quick search for customers from Upwork",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.upwork.com/*"
      ],

      "all_frames": true,
      "run_at": "document_end",

      "js": [
        "libs/jquery-3.1.1.min.js",
        "scripts/content/bootstrap.js"
      ]
    }
  ],

  "permissions":
  [
    "tabs",
    "activeTab",
    "notifications",
    "http://*/*",
    "https://*/*"
  ]
}
